<%= render 'form', post: Post.new %>
<%= form_for @post do |f| %>

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

    <%= f.text_field :content %>

    <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %>

    <%= f.collection_select :user_ids, User.all, :id, :username %>

    <%= f.fields_for :users, post.users.build do |users_fields| %>
        <%= users_fields.text_field :username %>
        <%= users_fields.text_field :password %>
      <% end %>

    <%= f.hidden_field :comment_content %> 

    <%= f.submit %>
  <% end %>